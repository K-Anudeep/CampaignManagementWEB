@model MarketingManagement.WEBUI.Models.SalesDetails

@{
    ViewData["Title"] = "Create Sales";
    Layout = "~/Views/ExecutiveHome/_Layout.cshtml";
}
<script>
    $(document).ready(function () {

        $("#saleForm").submit(function (e) {
            e.preventDefault()
            let saleDetails = {
                "OrderId": $('#OrderId').val(),
                "LeadId": $('#LeadId').val(),
                "ShippingAddress": $('#ShippingAddress').val(),
                "BillingAddress": $('#BillingAddress').val(),
                "CreatedOn": $('#CreatedOn').val(),
                "PaymentMode": $('#PaymentMode').val()
            };
            console.log(saleDetails)
            $.ajax({
                type: "POST",
                url: "http://localhost:25733/api/Executive/Sales/Add",
                data: JSON.stringify(saleDetails),
                contentType: "application/json",
                success: function () {
                    document.getElementById("leadDivSuccess").style.display = 'block'
                },
                error: function (response) {
                    document.getElementById("saleDivFail").style.display = 'block'
                    let fail = '<p>' + response.responseText + '</p>'
                    $('#saleDivFail').append(fail);
                }
            })
        })
    })
</script>


<h1>Create Sales</h1>

<h4>Enter Sales Details</h4>
<hr />
<div class="row" id="leadForm">
    <div class="col-md-4">
        <form asp-action="CreateLeads">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderID" class="control-label"></label>
                <input asp-for="OrderID" class="form-control" />
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LeadID" class="control-label"></label>
                <input asp-for="LeadID" class="form-control" />
                <span asp-validation-for="LeadID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ShippingAddress" class="control-label"></label>
                <input asp-for="ShippingAddress" class="form-control" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="BillingAddress" class="control-label"></label>
                <input asp-for="BillingAddress" class="form-control" />
                <span asp-validation-for="BillingAddress" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="CreatedON" class="control-label"></label>
                <input asp-for="CreatedON" class="form-control" />
                <span asp-validation-for="CreatedON" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PaymentMode" class="control-label"></label>
                <input asp-for="PaymentMode" class="form-control" />
                <span asp-validation-for="PaymentMode" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="alert alert-dismissible alert-success" id="leadDivSuccess" style="display: none">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                Sale Created!
            </div>
            <div class="alert alert-dismissible alert-danger" id="leadDivFail" style="display: none">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="leadCreateBtn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}